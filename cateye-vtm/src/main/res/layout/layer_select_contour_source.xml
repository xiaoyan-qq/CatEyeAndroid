<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/button_padding_default">

        <TextView
                android:id="@+id/tv_map_contour_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/button_padding_default"
                android:src="@drawable/selector_map_add"
                android:text="@string/local_contour_source"/>

        <View
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_vertical_margin"></View>

        <TextView
                android:id="@+id/tv_map_contour_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/button_padding_default"
                android:src="@drawable/selector_vector_point"
                android:text="@string/draw_contour_source"/>
    </LinearLayout>
</RelativeLayout>
