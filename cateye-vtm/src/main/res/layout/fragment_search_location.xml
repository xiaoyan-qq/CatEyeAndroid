<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cateye.vtm.fragment.SearchLocationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
        android:padding="@dimen/dp_2"
        android:layout_margin="@dimen/cateye_default_layer_padding">
        <ImageView
            android:id="@+id/img_search_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/cateye_default_widget_margin"
            android:padding="@dimen/button_padding_default"
            android:src="@drawable/selector_search_location"/>
        <EditText
            android:id="@+id/edt_search_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/img_search_location"
            android:background="@null"></EditText>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_search_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>