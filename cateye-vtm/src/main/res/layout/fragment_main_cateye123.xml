<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <org.oscim.android.MapView
            android:id="@+id/mapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    <!--用于显示操作工具栏的布局-->
    <RelativeLayout
            android:id="@+id/layer_main_cateye_fragment_operate"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </RelativeLayout>
    <!--用来显示fragment的布局文件,底部-->
    <FrameLayout
            android:id="@+id/layer_main_cateye_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"></FrameLayout>

    <RelativeLayout
            android:id="@+id/layer_main_fragment_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

        <LinearLayout
                android:id="@+id/layer_main_fragment_right_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/img_contour_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/button_padding_default"
                    android:src="@drawable/selector_contour_line"
                    android:text="@null"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/activity_vertical_margin"></View>

            <ImageView
                    android:id="@+id/img_map_source_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/button_padding_default"
                    android:src="@drawable/selector_map_add"
                    android:text="@null"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/activity_vertical_margin"></View>

            <ImageView
                    android:id="@+id/chk_draw_vector_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/button_padding_default"
                    android:src="@drawable/selector_vector_point"
                    android:text="@null"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_padding_default"></View>

            <ImageView
                    android:id="@+id/chk_draw_vector_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/button_padding_default"
                    android:src="@drawable/selector_vector_polyline"
                    android:text="@null"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_padding_default"></View>

            <ImageView
                    android:id="@+id/chk_draw_vector_polygon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/button_padding_default"
                    android:src="@drawable/selector_vector_polygon"
                    android:text="@null"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/activity_vertical_margin"></View>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/button_padding_default"
                    android:src="@drawable/selector_icon_location"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/activity_vertical_margin"></View>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
