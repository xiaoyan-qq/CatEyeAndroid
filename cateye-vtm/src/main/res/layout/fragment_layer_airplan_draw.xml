<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
            android:id="@+id/img_air_plan_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/button_padding_default"
            android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/button_padding_default"
            android:src="@drawable/selector_pen_draw"/>

    <ImageView
            android:id="@+id/img_air_plan_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/button_padding_default"
            android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
            android:padding="@dimen/button_padding_default"
            android:src="@drawable/selector_previous"/>

    <ImageView
            android:id="@+id/img_air_plan_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/button_padding_default"
            android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
            android:padding="@dimen/button_padding_default"
            android:src="@drawable/selector_clear"/>

    <View
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_vertical_margin"></View>
</LinearLayout>
