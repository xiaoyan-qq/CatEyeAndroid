<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/button_padding_default">

        <ImageView
                android:id="@+id/img_login_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:minHeight="120dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher"/>

        <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edt_login_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_padding_default"
                android:hint="请输入用户名"
                android:maxLength="60"
                android:maxLines="1"
                android:minWidth="200dp"
                android:paddingLeft="@dimen/button_padding_default"
                android:paddingRight="@dimen/button_padding_default"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:roundedCorners="true"/>

        <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/edt_login_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_padding_default"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="60"
                android:maxLines="1"
                android:minWidth="200dp"
                android:paddingLeft="@dimen/button_padding_default"
                android:paddingRight="@dimen/button_padding_default"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:roundedCorners="true"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_padding_default"
                android:minWidth="200dp"
                android:text="@string/login"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:roundedCorners="true"></com.beardedhen.androidbootstrap.BootstrapButton>

        <CheckBox
                android:id="@+id/chk_remeberPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="记住密码"
                android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>
