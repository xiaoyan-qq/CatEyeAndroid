<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_66"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/bootstrap_alert_paddings"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pb_tile_download"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/tv_tile_download"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/bbtn_tile_download_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/button_padding_default"
                android:text="确定"
                app:bootstrapBrand="info"></com.beardedhen.androidbootstrap.BootstrapButton>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/bbtn_tile_download_mini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/button_padding_default"
                android:text="最小化"
                android:layout_below="@id/bbtn_tile_download_ok"
                app:bootstrapBrand="warning"></com.beardedhen.androidbootstrap.BootstrapButton>
    </LinearLayout>
</RelativeLayout>

