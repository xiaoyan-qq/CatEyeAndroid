<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/ripple">
    <item>
        <selector>
            <item
                android:drawable="@color/bg_color_gray_alpha"
                android:state_pressed="true"></item>
            <item
                android:drawable="@color/bg_color_gray_alpha"
