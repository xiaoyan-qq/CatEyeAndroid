<resources>

    <style name="button_4_radius" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textColor">@color/selector_tvcolor_blue_frame_white_bg_4_radius</item>
        <item name="android:background">@drawable/selector_bg_blue_frame_white_bg_4_radius</item>
        <item name="android:padding">@dimen/button_padding_default</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_4_radius" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/selector_tvcolor_blue_frame_white_bg_4_radius</item>
        <item name="android:background">@drawable/selector_bg_blue_frame_white_bg_4_radius</item>
        <item name="android:padding">@dimen/button_padding_default</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/snow</item>
    </style>

    <style name="main_fragment_menu_style">
        <item name="android:background">@drawable/selector_bg_blue_frame_white_bg_4_radius</item>
        <item name="android:textSize">8sp</item>
        <item name="android:padding">@dimen/button_padding_default</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="rowItem">
        <item name="android:padding">@dimen/button_padding_default</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ripple_bg</item>
    </style>

    <style name="headStyle">
        <item name="android:background">@color/bootstrap_brand_primary</item>
    </style>

    <style name="titleStyle" parent="android:Widget.TextView">
        <item name="textColor">@color/whitesmoke</item>
        <item name="textSize">@dimen/lv_font_main_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
